<Window x:Class="Work_with_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work_with_API"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ApiVM x:Key="vm"/>
    </Window.Resources>
    
    <StackPanel DataContext="{StaticResource vm}">
        <ComboBox ItemsSource="{Binding Students}"/>
        <Label Content="{Binding SelectedStudent.name}"/>
        <Label Content="{Binding Students.Count}"/>
        <Label/>
        <Label/>
    </StackPanel>
</Window>
