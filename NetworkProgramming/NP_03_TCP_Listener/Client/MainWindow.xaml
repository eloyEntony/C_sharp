<Window x:Class="ClientDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="348.2">
    <Grid>
        <StackPanel Margin="10">
            <Label>Name</Label> <TextBox Name="name" Height="40" />
            <Label>Phone</Label><TextBox Name="phone" Height="40" />
            <Button Width="70" Height="40" Click="Button_Click">Add contact</Button>
            <Button Width="70" Height="40" Click="Refresh_Click">Refresh</Button>
            <Button Width="70" Height="40" Click="Edit_Click">Edit</Button>
            <ListBox x:Name="all"></ListBox>
        </StackPanel>
    </Grid>
</Window>
