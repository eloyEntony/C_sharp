<Window x:Class="Wpf_ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="276.215">
    <Grid>
        <StackPanel x:Name="spChat">
            <Label Content="Enter name :" x:Name="lb"/>
            <TextBox x:Name="tbMsg" Margin="10"/>
            <Button Content="Send" Width="70" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
