<Window x:Class="Client_clock_date.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_clock_date"
        mc:Ignorable="d"
        Title="MainWindow" Height="184" Width="375.256">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton x:Name="rbTime" Content="TIME" Margin="10" Click="rbTime_Click"/>
            <RadioButton x:Name="rbDate" Content="DATE" Margin="10" Click="rbTime_Click"/>
        </StackPanel>
        <Button Click="Button_Click" Content="GET" Margin="10"/>
        <Label Name="lbGet" FontSize="30" HorizontalContentAlignment="Center"/>
    </StackPanel>
</Window>
