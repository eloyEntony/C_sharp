<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="253.58" Width="321.228">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="68*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <RadioButton Content="1" Margin="10"/>
            <RadioButton Content="2" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" >
            <TextBox x:Name="tbSend" Margin="10"/>
            <Button Content="Send / Get" Width="100" Margin="10" Click="Button_Click"/>
            <Label Name="lbRes" FontSize="30"/>
        </StackPanel>
    </Grid>
</Window>
