<Window x:Class="ado_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ado_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="401" Closing="Window_Closing">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <ListView Margin="10" Name="LV">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Surname}" Header="Surname"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Group}" Header="Group"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1">
            <Button Margin="10" Content="Add student" Click="Add_click"/>
            <Button Margin="10" Content="Edit" Click="Edit_click"/>
            <Button Margin="10" Content="Delete" Click="Delete_click"/>
        </StackPanel>
    </Grid>
</Window>
